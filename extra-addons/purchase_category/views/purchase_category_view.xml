<odoo>
    <!--vista que nor perimte ver las categorias ya creadas-->
    <record id="category_tree" model="ir.ui.view">
        <field name="name">category.tree</field>
        <field name="model">purchase.category</field>
        <field name="arch" type="xml">
            <tree string="Categories">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- fromulario que nos permite crear una categoria -->
    <record id="category_form" model="ir.ui.view">
        <field name="name">category.form</field>
        <field name="model">purchase.category</field>
        <field name="arch" type="xml">
            <form string="Create Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- accion que nos permite abrir la vista de categorias como el form y la lista de las categorias (tree)-->
    <record id="action_purchase_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">purchase.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!--submenu dentro del partado purchase-->
    <menuitem
        id="menu_purchase_category"
        name="category"
        parent="purchase.menu_purchase_root"
        action="purchase_category.action_purchase_category"/>
</odoo>
